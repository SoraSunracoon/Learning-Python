random import

def play_game():
    """Play one round of the guessing game."""
    # Generate a random number between 1 and 100
    secret_number = random.randint(1, 100)
    guess = None
    attempts = 0
    max_attempts = 7
    
    print("=" * 50)
    print("Welcome to the Number Guessing Game!")
    print("=" * 50)
    print(f"\nI'm thinking of a number between 1 and 100.")
    print(f"You have {max_attempts} attempts to guess it.\n")
    
    # Keep looping until the player guesses correctly or runs out of attempts
    while guess != secret_number and attempts < max_attempts:
        try:
            # Get player's guess
            guess = int(input("Enter your guess: "))
            attempts += 1
            
            # Validate input range
            if guess < 1 or guess > 100:
                print("Please enter a number between 1 and 100.\n")
                continue
            
            # Give feedback
            if guess < secret_number:
                print(f"Too low! Try a higher number.")
                print(f"Attempts remaining: {max_attempts - attempts}\n")
            elif guess > secret_number:
                print(f"Too high! Try a lower number.")
                print(f"Attempts remaining: {max_attempts - attempts}\n")
            else:
                print(f"\nğŸ‰ Congratulations! You guessed {secret_number} correctly!")
                print(f"You won in {attempts} attempt(s)!\n")
                
        except ValueError:
            print("That's not a valid number. Please try again.\n")
    
    # Handle running out of attempts
    if guess != secret_number:
        print(f"\nâŒ Game Over! The number was {secret_number}.")
        print(f"Better luck next time!\n")


def main():
    """Main game loop - allows multiple rounds."""
    play_again = "yes"
    
    while play_again.lower() in ["yes", "y"]:
        play_game()
        play_again = input("Do you want to play again? (yes/no): ")
    
    print("Thanks for playing! Goodbye! ğŸ‘‹\n")


if __name__ == "__main__":
    main()
